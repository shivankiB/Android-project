<?xml version="1.0" encoding="utf-8"?>
    <resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/royal_purple</item>

        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:statusBarColor">@color/light</item>
        <item name="android:textColorPrimary">@color/darker</item>
        <item name="android:button">@color/dark</item>


        <!-- No action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


        <!-- App bar overlay -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>


        <!-- Popup overlay -->
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>


    </style>

    </resources>
