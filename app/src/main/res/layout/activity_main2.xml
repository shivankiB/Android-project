<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#675377"
    tools:context=".MainActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"

        >
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/light"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="60dp"
                    android:src="@drawable/tixino1"
                    android:contentDescription="TODO" />


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    android:src="@drawable/hamburger_icon"
                    android:contentDescription="TODO" />

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:layout_marginTop="90dp"
                android:backgroundTint="#9C27B0"
                android:orientation="vertical">

                <Button
                    android:id="@+id/MylistButton"
                    android:layout_width="300dp"
                    android:textColor="#ffffff"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="#C46E478C"
                    android:text="My List" />


                <Button
                    android:textColor="#ffffff"
                    android:id="@+id/UpcomingButton"
                    android:layout_marginTop="20dp"
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="#5B4070"
                    android:text="Upcoming Events " />

                <Button
                    android:textColor="#ffffff"
                    android:id="@+id/PastButton"
                    android:layout_marginTop="20dp"
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="#3B2B47"
                    android:text="Past Events" />

                <Button
                    android:textColor="#ffffff"
                    android:id="@+id/ProfileButton"
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#5B4070"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"

                    android:layout_weight="1"
                    android:text="Profile" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <Switch
                    android:id="@+id/notificationSwitch"
                    android:layout_width="130dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:text="Notification" />

                    <Button
                        android:textColor="#ffffff"
                        android:id="@+id/deleteButton"
                        android:layout_width="110dp"
                        android:backgroundTint="#C46E478C"
                        android:layout_marginTop="1dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Delete Account" />




                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:backgroundTint="#9C27B0"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/csiPce_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:maxWidth="48dp"
                    android:maxHeight="48dp"

                    android:src="@drawable/csi"
                    android:contentDescription="TODO" />


                <ImageView
                    android:id="@+id/tpcpce_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:maxWidth="48dp"
                    android:maxHeight="48dp"

                    android:src="@drawable/tpc"
                    android:contentDescription="TODO" />


                <ImageView
                    android:id="@+id/srtpce_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:maxWidth="48dp"
                    android:maxHeight="48dp"

                    android:src="@drawable/srtpce_logo"
                    android:contentDescription="TODO" />


                <ImageView
                    android:id="@+id/ieeepce_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:maxWidth="48dp"
                    android:maxHeight="48dp"

                    android:src="@drawable/ieee"
                    android:contentDescription="TODO" />


                <ImageView
                    android:id="@+id/nsspce_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:maxWidth="48dp"
                    android:maxHeight="48dp"

                    android:src="@drawable/nsc"
                    android:contentDescription="TODO" />


                <ImageView
                    android:id="@+id/pce_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:maxWidth="50dp"
                    android:maxHeight="50dp"

                    android:src="@drawable/stucouncil"
                    android:contentDescription="TODO" />


            </LinearLayout>


            <!-- Floating Action Button for adding -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addEventButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="80dp"
                android:elevation="6dp"
                android:src="@drawable/create"
                app:backgroundTint="@color/light"
                android:contentDescription="TODO" />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>


        <include
            android:id="@+id/app_bar_main"
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header_main"
            app:menu="@menu/activity_main_drawer" />
    </androidx.drawerlayout.widget.DrawerLayout>
</androidx.constraintlayout.widget.ConstraintLayout>